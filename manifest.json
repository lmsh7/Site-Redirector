{
  "manifest_version": 3,
  "name": "Site Redirector",
  "version": "1.0",
  "description": "Redirects specified websites with customizable probability.",
  "permissions": [
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}